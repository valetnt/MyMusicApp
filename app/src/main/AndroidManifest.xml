<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mymusicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyLibrary"
            android:label="@string/title_activity_my_library"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mymusicapp.MainActivity" />
        </activity>
        <activity
            android:name=".Artist"
            android:label="@string/title_activity_artist"
            android:parentActivityName=".MyLibrary"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mymusicapp.MyLibrary" />
        </activity>
        <activity
            android:name=".Album"
            android:label="@string/title_activity_album"
            android:parentActivityName=".MyLibrary"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mymusicapp.MyLibrary" />
        </activity>
        <activity
            android:name=".AlbumFromArtist"
            android:label="@string/title_activity_album_from_artist"
            android:parentActivityName=".MyLibrary"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mymusicapp.MyLibrary" />
        </activity>
        <activity
            android:name=".PlaySingle"
            android:label="@string/title_activity_play_single"
            android:parentActivityName=".MyLibrary"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mymusicapp.MyLibrary" />
        </activity>
        <activity
            android:name=".PlayAlbumTrack"
            android:label="@string/title_activity_play_album_track"
            android:parentActivityName=".MyLibrary"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.mymusicapp.MyLibrary" />
        </activity>
    </application>

</manifest>