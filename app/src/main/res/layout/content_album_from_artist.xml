<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="?attr/actionBarSize"
    tools:context="com.example.android.mymusicapp.Album">

    <TextView
        android:id="@+id/info_bar_album_from_artist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/info_bar_vertical_margin"
        android:gravity="center_vertical"
        style="@style/info_bar"/>

    <TextView
        android:id="@+id/info_bar_album_from_artist_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/info_bar_subtitle_vertical_margin"
        android:paddingBottom="@dimen/info_bar_subtitle_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        style="@style/info_bar_subtitle"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/album_from_artist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/album_back_button_height"
        android:layout_marginTop="@dimen/album_back_button_paddingTop"
        android:layout_gravity="center_horizontal"
        android:text="@string/back_button"
        style="@style/BackButton"/>

</LinearLayout>
