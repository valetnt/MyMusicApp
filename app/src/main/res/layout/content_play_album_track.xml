<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.mymusicapp.PlayAlbumTrack"
    tools:showIn="@layout/activity_play_album_track">


    <LinearLayout
        android:id="@+id/now_playing_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/now_playing_info_dim"
        android:orientation="vertical">

        <TextView
            style="@style/Now_Playing_Info_Subtitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="@string/now_playing_info_artist"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            style="@style/Now_Playing_Info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="@string/now_playing_info_song"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            style="@style/Now_Playing_Info_Subtitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="@string/now_playing_info_album"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="@dimen/album_cover_dim"
        android:layout_height="@dimen/album_cover_dim"
        android:layout_below="@id/now_playing_info"
        android:layout_marginBottom="@dimen/now_playing_vertical_margin"
        android:layout_marginTop="@dimen/now_playing_vertical_margin"
        android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cursor_progress_bar"
        android:layout_below="@id/album_cover">

        <Button
            android:layout_width="@dimen/cursor_progress_bar"
            android:layout_height="@dimen/cursor_progress_bar"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/scrollBarSize"
            android:layout_gravity="center_vertical"
            android:background="@color/veryDarkGray" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/player_times"
        android:layout_below="@id/progress_bar"
        android:layout_marginTop="@dimen/headers_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/player_times_width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:text="@string/media_player_start_time"/>

        <TextView
            android:layout_width="@dimen/player_times_width"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:text="@string/media_player_end_time"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/media_buttons"
        android:baselineAligned="false"
        android:layout_below="@id/player_times"
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_buttons_bar_dim"
        android:layout_marginTop="@dimen/headers_padding"
        android:layout_marginBottom="@dimen/media_player_vertical_spacing"
        android:orientation="horizontal">
        
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/media_buttons_dim"
                android:layout_height="@dimen/media_buttons_dim"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/shuffle" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/media_buttons_bar_dim">

            <ImageView
                android:layout_width="@dimen/media_buttons_dim"
                android:layout_height="@dimen/media_buttons_dim"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/skip_back" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/media_buttons_bar_dim">

            <ImageView
                android:layout_width="@dimen/media_buttons_dim"
                android:layout_height="@dimen/media_buttons_dim"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/pause" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/media_buttons_bar_dim">

            <ImageView
                android:layout_width="@dimen/media_buttons_dim"
                android:layout_height="@dimen/media_buttons_dim"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/skip_forward" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/media_buttons_bar_dim">

            <ImageView
                android:layout_width="@dimen/media_buttons_dim"
                android:layout_height="@dimen/media_buttons_dim"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/repeat" />

        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/back_to_album"
        style="@style/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/album_back_button_dim"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/back_to_album" />

</RelativeLayout>
