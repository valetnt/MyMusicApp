<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationUserFullName" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NavigationUserEmailAddress" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainScrollView">
        <item name="android:scrollbarThumbVertical">@android:color/darker_gray</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarSize">@dimen/scrollBarSize</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="ContentHeader" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SmallItemsRecyclerView" parent="AppTheme">
        <item name="android:scrollbarThumbHorizontal">@android:color/darker_gray</item>
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
        <item name="android:scrollbarSize">@dimen/scrollBarSize</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:background">@color/darkerBackground</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="SmallItemsArtist" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SmallItemsAlbumTitle" parent="AppTheme">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LibraryItems" parent="AppTheme">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/veryDarkGray</item>
    </style>

</resources>
